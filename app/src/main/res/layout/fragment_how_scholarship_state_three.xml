<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="160dp"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:text=" 3. 국가장학금 2유형"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center|left"
                android:text=": - 신청자격"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center|left"
                android:text=": 재학(복학 포함)예정인 소득 8분위 이하 대한민국 국적의 정규학기 학부생"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center|left"
                android:text="미등록 휴학자, 외국국적자 제외"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center|left"
                android:layout_marginTop="10dp"
                android:text="- 지원금액"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center|left"
                android:text=": 장학위원회에서 추후 결정"
                android:textSize="12dp"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="380dp"
        android:layout_height="2px"
        android:layout_marginLeft="10dp"
        android:background="#000000"
        android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="신청 방법"
            android:textSize="20dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="330dp"
            android:layout_height="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background ="@drawable/bg_white_framebar" />

            <TextView
                android:layout_width="330dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="1. 한국장학재단 온라인 신청"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background ="@drawable/bg_white_framebar" />

            <TextView
                android:layout_width="330dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="2. 서류제출 대상 여부 확인"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background ="@drawable/bg_white_framebar" />

            <TextView
                android:layout_width="330dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="3. 서류제출 필요시 3영업일 이내 제출"/>
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_routebar"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="더 자세한 장학금 정보를 보고싶다면?"
                android:textSize="22dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="홈버튼 -> 학사/장학 -> 장학안내 -> 교내/교외/국가장학금"
                android:textSize="12dp"
                android:gravity="center"/>



        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_tino_icon"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="26dp"/>

    </FrameLayout>

</LinearLayout>