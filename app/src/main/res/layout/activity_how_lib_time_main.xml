<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_routebar"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="도서관에 대해 궁금해요!"
                android:textSize="25dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="도서관 이용사관과 이용방법에 대해 알려드릴께요!"
                android:textSize="12dp"
                android:gravity="center"/>



        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_tino_icon"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="26dp"/>

    </FrameLayout>


    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="255dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="도서관 이용 방법"
            android:textSize="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="- 이용대상"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text=": 본교 재학중인 학부생"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:text="- 자료실/열람실 출입"
                android:textSize="12dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text=": 학부생은 자료실 / 열람실 출입 및 좌석 이용이 가능/ 카드형 학생증(또는 모바일학생증) 지참"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:text="- 자료이용"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text=": 도서대출 4권 10일"
                android:textSize="12dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="도서 연장 1회 10일"
                android:textSize="12dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="도서 예약 대출중 도서 1인 3권 예약"
                android:textSize="12dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="예약대기일은 반납일 익일 + 3일"
                android:textSize="12dp"/>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="380dp"
        android:layout_height="2px"
        android:layout_marginLeft="10dp"
        android:background="#000000"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:text="도서관 이용 시간"
            android:textSize="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/how_lib_time"/>

    </LinearLayout>





</LinearLayout>