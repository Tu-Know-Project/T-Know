<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="89dp"
    tools:context=".PlaceMenuFragment"
    android:orientation="horizontal"
    android:gravity="center"
    android:id="@+id/PlaceFragment"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:id="@+id/btn_facilities"

        android:gravity="center"
        >
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/menu_this_rounge_icon"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="편의시설\n 위치"
            android:textStyle="bold"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:orientation="vertical"
        android:id="@+id/btn_office"
        android:layout_weight="1"
        android:gravity="center"
        >
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/menu_this_office_icon"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="학과 사무실\n 위치"
            android:textStyle="bold"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_smokingArea"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/menu_this_smoke_icon" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="흡연장위치"
            android:textSize="10dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/btn_other"
        >
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/menu_this_other_icon"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="기타 시설"
            android:textStyle="bold"
            android:textSize="10dp" />
    </LinearLayout>

</LinearLayout>