<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_routebar"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="국가 장학금에 대해 궁금해요!"
                android:textSize="25dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="12.5dp"
                android:text="국가장학금은 1, 2유형으로 나뉘며 한국장학재단에서 선발합니다!"
                android:textSize="12dp"
                android:gravity="center"/>

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_tino_icon"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="26dp"/>

    </FrameLayout>


    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="165dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:text=" 1. 국가장학금 1유형"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text=": 신청자격"
                android:layout_marginTop="10dp"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="재학(복학 포함)예정인 소득 8분위 이하 대한민국 국적의 정규학기 학부생 미등록휴학자, 외국국적자는 지급 제외"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="- 지원금액"
                android:layout_marginTop="5dp"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="재학생은 반드시 1차 신청만 가능, 2차 불가"
                android:textSize="12dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="· 재학생이 1차 미신청 시 2차 신청 구제는 총 1회에 한해 가능, 이후 구제 불가"
                android:textSize="12dp"/>
        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="20dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="245dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_progress_circle_now"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            android:src="@drawable/bg_progress_circle"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            android:src="@drawable/bg_progress_circle"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            android:src="@drawable/bg_progress_circle"/>
    </LinearLayout>




</LinearLayout>