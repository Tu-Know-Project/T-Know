<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="89dp"
    tools:context=".PlaceMenuFragment"
    android:orientation="horizontal"
    android:gravity="center"
    android:id="@+id/EatFragment"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:id="@+id/btn_map"

        android:gravity="center"
        >
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/menu_eat_map_icon"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="맛집 지도"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:orientation="vertical"
        android:id="@+id/btn_school_food"
        android:layout_weight="1"
        android:gravity="center"
        >
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/main_eat_school_food_icon"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="교내 학식"
            android:textStyle="bold"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_cafe"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/menu_eat_cafe_icon" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="교내 카페"
            android:textSize="10dp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>