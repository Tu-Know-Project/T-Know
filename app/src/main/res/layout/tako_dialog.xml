<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/tako_dialog"
    android:background="@drawable/modal_layout"
    >

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tako_modal_background"
        />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:id="@+id/modal_close_btn"
        android:src="@drawable/modal_close_btn_icon" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:text="오늘은 타꼬야끼 트럭이"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="오는 날입니다!"
                android:textSize="15dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:gravity="center|left"
                android:text="타코야끼 트럭 위치 : 종합관 뒤"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/detail_tako_btn"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:textAlignment="center"
                android:text="자세히 보기"
                android:textColor="@color/white"
                android:gravity="center|left"
                android:textStyle="bold"
                android:textSize="11dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
